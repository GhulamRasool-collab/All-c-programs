#include <stdio.h>
int main() {
    int choice;
    
    do {
        printf("\n--- Menu ---\n");
        printf("1. Option 1\n");
        printf("2. Option 2\n");
        printf("3. Exit\n");
        printf("Enter choice: ");
        scanf("%d", &choice);
        
        switch(choice) {
            case 1: printf("Option 1 selected\n"); break;
            case 2: printf("Option 2 selected\n"); break;
            case 3: printf("Goodbye!\n"); break;
            default: printf("Invalid choice!\n");
        }
    } while(choice != 3);
    
    return 0;
}
